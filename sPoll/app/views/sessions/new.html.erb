<%= bootstrap_form_for(:session, url: sessions_path,layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>
    <%= f.email_field :email, label: "Email" %>
    <%= f.password_field :password, label: "Password" %>
    <%= f.form_group do %>
        <%= f.submit "Login", class: "btn btn-success" %>
    <% end %>
<% end %>